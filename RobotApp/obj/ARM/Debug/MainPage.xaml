        <TextBox x:ConnectionId='11' Name="CurrentState" HorizontalAlignment="Left" Background="White" Foreground="Black" Margin="169,481,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="52" Width="350" FontSize="25" />
