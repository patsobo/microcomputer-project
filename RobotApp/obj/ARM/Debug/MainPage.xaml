        <Button x:ConnectionId='14' Content="Switch Mode" HorizontalAlignment="Left" Background="Yellow" Foreground="Black" Margin="650,42,0,0" VerticalAlignment="Top" Height="91" Width="161"                          FontSize="18"/>
